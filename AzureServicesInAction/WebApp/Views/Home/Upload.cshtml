@model List<string>

@{
    ViewData["Title"] = "Upload File to Blob";
}

<h2>Upload Image</h2>

<form asp-controller="Home" asp-action="Upload" method="post" enctype="multipart/form-data">
    <input type="file" name="file" />
    <button type="submit">Upload</button>
</form>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}

@if (ViewBag.ImageUrl != null)
{
    <h3>Uploaded Image:</h3>
    <img src="@ViewBag.ImageUrl" alt="Uploaded Image" style="max-width:400px;" />
}


<h2>Uploaded Images</h2>

@if (Model != null && Model.Any())
{
    <div>
        @foreach (var url in Model)
        {
            <img src="@url" alt="Image" style="max-width:300px; margin:10px;" />
        }
    </div>
}
else
{
    <p>No images found.</p>
}